        app:layout_constraintTop_toTopOf="@+id/imgPlayerChampion0"
        app:srcCompat="@drawable/ahri" />

    <TextView
        android:id="@+id/lblPlayerLvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="LV 7"
        android:textColor="@color/cardview_light_background"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/lblPlayerName"
        app:layout_constraintStart_toStartOf="@+id/lblPlayerName"
        app:layout_constraintTop_toBottomOf="@+id/lblPlayerName" />

