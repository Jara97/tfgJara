        android:layout_marginStart="3dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        android:textSize="11dp"
        app:layout_constraintBottom_toTopOf="@+id/lblPlayerLvl"
        app:layout_constraintEnd_toStartOf="@+id/imgPlayerChampion0"
        app:layout_constraintStart_toEndOf="@+id/imgPlayerPet"
        app:layout_constraintTop_toTopOf="@+id/imgPlayerPet" />

    <ImageView
        android:id="@+id/imgPlayerPet"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lblPlayerName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dssquid" />

    <ImageView
        android:id="@+id/imgPlayerChampion0"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@+id/imgPlayerChampion1"
        app:layout_constraintStart_toEndOf="@+id/lblPlayerName"
        app:layout_constraintTop_toTopOf="@+id/imgPlayerPet"
        app:srcCompat="@drawable/ahri" />

