<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cardview_dark_background"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardShadow"
        android:layout_width="67dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="67dp">
    <ImageView
        android:id="@+id/imgChampion"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/lblCName"
        android:layout_width="65dp"
        android:textColor="@color/blueSoft"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Aurelion sol"
        app:layout_constraintStart_toEndOf="@+id/cardShadow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblCCost"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="1"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblCName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lblCClass" />

    <TextView
        android:id="@+id/lblCOrigin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="4dp"
        android:text="TextView"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblCName"
        app:layout_constraintEnd_toStartOf="@+id/lblCClass"
        app:layout_constraintStart_toEndOf="@+id/lblCName" />

    <TextView
        android:id="@+id/lblCClass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textColor="@color/cardview_light_background"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblCOrigin"
        app:layout_constraintEnd_toStartOf="@+id/lblCCost"
        app:layout_constraintStart_toEndOf="@+id/lblCOrigin" />

</androidx.constraintlayout.widget.ConstraintLayout>